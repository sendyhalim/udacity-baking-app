<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ingredientListHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingredientListHeader"
        android:textSize="@dimen/headerFontSize"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ingredientRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ingredientListHeader"
        android:layout_marginTop="@dimen/headerBodyMargin" />
</android.support.constraint.ConstraintLayout>
